<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.octapus.vibrafit">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_vibrafit_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_vibrafit_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.VibraFit"
        tools:targetApi="31">
        <activity
            android:name=".activity_register"
            android:exported="false" />
        <activity
            android:name=".activity_login"
            android:exported="false" /> <!-- Splash inicial (primera que se lanza al abrir la app) -->
        <activity
            android:name=".activity_splash_screeen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Pantalla de bienvenida 1 -->
        <activity
            android:name=".welcomeScreenActivity1"
            android:exported="false" /> <!-- Pantalla de bienvenida 2 -->
        <activity
            android:name=".splash_screen_2"
            android:exported="false" /> <!-- Actividad principal (por ejemplo, home o login) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>