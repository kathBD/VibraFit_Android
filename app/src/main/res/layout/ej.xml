<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header con hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:text="19:02"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="Notificaciones"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="@drawable/circle_red"
                    android:layout_gravity="top|end"
                    android:translationX="6dp"
                    android:translationY="-6dp" />
            </FrameLayout>
        </LinearLayout>

        <!-- Saludo -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_marginTop="8dp"
            android:text="Hola Raquel,"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ID usuario -->
        <TextView
            android:id="@+id/tvUserId"
            android:layout_marginTop="4dp"
            android:text="ID 1254411"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tarjeta con info usuario -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Foto usuario"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_grey" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:text="Raquel Pol"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvUserGoal"
                        android:text="Perdido de peso"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:text="HolaRaquel.Pol@gmail.com"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Datos (Peso, Días, Tiempo) -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="Peso"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:text="80kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="5 días"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvWorkoutDays"
                    android:text="5 días"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:text="Tiempo"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvWorkoutTime"
                    android:text="45:00 min"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Selector de nivel -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#f5f5f5"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvNovato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Novato"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp"
                android:background="#ddd" />

            <TextView
                android:id="@+id/tvIntermedio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intermedio"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAvanzado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Avanzado"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Rutinas -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Cardio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:text="Cardío"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="4 días"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="30:00 min"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Peso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:text="Peso"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="5 días"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="45:00 min"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnReviewRoutine"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revisor rutina"
                    android:backgroundTint="#2465E1"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progreso -->
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Fórmula y valores -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="- 1/k -"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Peso perdido"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="k₀"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="11"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="45"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- Entrenamientos -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="45"
                    android:textSize="32sp"
                    android:textColor="#2465E1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Entrenamientos"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Semanas entrenamiento -->
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:text="SEMANAS ENTRENAMIENTO"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:text="8/12"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Selector semanas -->
        <HorizontalScrollView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/weekSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:gravity="center"
                    android:background="#2465E1"
                    android:textColor="#fff"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="11"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="13"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="14"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="15"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="17"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="18"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Barra inferior navegación -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#000"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/selector_nav_color"
            app:itemTextColor="@color/selector_nav_color"
            app:labelVisibilityMode="unlabeled"
            app:itemIconSize="32dp" />
    </LinearLayout>
</ScrollView>