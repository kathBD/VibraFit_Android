<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1A1A1A"
    tools:context=".activity_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Parte superior con imagen y texto -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image195" />

            <!-- Enlaces Iniciar Sesión y Registro -->
            <LinearLayout
                android:id="@+id/topLinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:elevation="8dp">

                <TextView
                    android:id="@+id/tvLoginTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Iniciar Sesión"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvRegister"
                    android:text="Registro"
                    android:textColor="#888888"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Texto "Hola, Inicia aquí" -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, Inicia aquí"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp" />
        </RelativeLayout>

        <!-- Zona inferior (formulario) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B1E28"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo Vibrafit"
                android:src="@drawable/logo34210" />

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:tint="#888888" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888" />
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_password"
                    android:tint="#888888" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/visibility_off_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
                    android:tint="#888888" />
            </LinearLayout>

            <!-- Olvidaste tu password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="24dp"
                android:text="¿Olvidaste tu password?"
                android:textColor="#2465E1"
                android:textSize="14sp" />

            <!-- Botón Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="200"
                android:layout_height="48dp"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="#2465E1"
                app:icon="@drawable/login_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>



