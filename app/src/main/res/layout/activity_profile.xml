<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="16dp">

        <!-- Header saludo y notificaciones -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logoVibraFit"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_marginStart="12dp"
                android:text="Hola Raquel,"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:contentDescription="Notificaciones"
                android:src="@drawable/ic_bell" />

            <TextView
                android:id="@+id/notificationBadge"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="@drawable/circle_red"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="12sp"
                android:translationX="-6dp"
                android:translationY="6dp" />

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

            </FrameLayout>
        </LinearLayout>

        <!-- Tarjeta con info usuario -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Foto usuario"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_grey" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:text="Raquel Pol"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:text="choudrayaoun121@gmail.com"
                        android:textSize="14sp"
                        android:textColor="#555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvGoal"
                    android:text="Pérdida de peso"
                    android:textSize="14sp"
                    android:textColor="#1976D2"
                    android:background="@drawable/bg_goal"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Datos (Peso, Estatura, Edad) -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="2dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="Peso"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:text="80kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="2dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="Estatura"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvHeight"
                    android:text="1.63 cm"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_data_card"
                android:padding="2dp"

                android:gravity="center">

                <TextView
                    android:text="Edad"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAge"
                    android:text="29"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- Selector de nivel -->

        <!-- Rutina con días y tiempos -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupLevels"
            android:layout_width="424dp"
            android:layout_height="40dp"
            android:background="#1B1E28"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            app:chipSpacing="6dp"
            app:selectionRequired="true"
            app:singleSelection="true">


            <com.google.android.material.chip.Chip
                android:id="@+id/chipNovato"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:checked="true"
                android:text="Novato"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#2465E1"
                app:chipEndPadding="0dp"
                app:chipStartPadding="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIntermedio"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Intermedio"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1B1E28"
                app:chipEndPadding="0dp"
                app:chipStartPadding="20dp" />


            <com.google.android.material.chip.Chip
                android:id="@+id/chipAvanzado"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginRight="20dp"
                android:text="Avanzado"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#1B1E28"
                app:chipEndPadding="0dp"
                app:chipStartPadding="20dp" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e7e7e7">

                <!-- Card Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_directions_run_24"
                        android:contentDescription="Cardio"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="Cardio"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="5 días"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="45:00 min"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:paddingEnd="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_weht"
                        android:contentDescription="Peso"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="Peso"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="4 días"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="30:00 min"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"

                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btnReviewRoutine"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revisar rutina"
                    android:backgroundTint="#FBAF2E"
                    android:textColor="#fff" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Peso perdido y entrenamientos -->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Peso perdido -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressDona"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:indicatorSize="120dp"
                    app:trackThickness="12dp"
                    app:trackColor="#E0E0E0"
                    app:indicatorColor="#FBAF2E"
                    app:progress="70"
                    app:indeterminate="false" />

                <TextView
                    android:id="@+id/tvProgresoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="11 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </FrameLayout>



            <!-- Entrenamientos -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:BackgroundColor="#EB3349">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/baseline_monitor_heart_24"
                    android:background="@drawable/circle_red"
                    android:padding="12dp"
                    app:tint="#FFFFFF" />


                <TextView
                    android:text="45"
                    android:textSize="30sp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Entrenamientos"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Semanas entrenamiento -->
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:text="SEMANAS ENTRENAMIENTO"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginStart="4dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:text="8/12"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Selector semanas -->
        <HorizontalScrollView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/weekSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>

