<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VibrafitButtonStyle">
        <item name="android:background">@drawable/bg_vibrafit_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para chips segmentados -->
    <style name="ChipSegmented" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="chipStrokeColor">#1B1E28</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>
